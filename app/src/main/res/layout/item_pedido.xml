<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutPedido"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_marginTop="3dp"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/txtProducto"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:text="Nombre producto largo"
        android:textColor="@color/black"
        android:textSize="11sp"
        />

    <TextView
        android:id="@+id/labelCantidad"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="Cantidad:"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/txtProducto"
        android:layout_toRightOf="@id/txtProducto"
        />

    <TextView
        android:id="@+id/txtCantidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:text="000"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:layout_toEndOf="@id/labelCantidad"
        android:layout_toRightOf="@id/labelCantidad"
        />

    <TextView
        android:id="@+id/labelPrecio"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="Precio:"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/txtCantidad"
        android:layout_toRightOf="@id/txtCantidad"
        />

    <TextView
        android:id="@+id/txtPrecio"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:text="$000.00"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:layout_toEndOf="@id/labelPrecio"
        android:layout_toRightOf="@id/labelPrecio"
        />

</LinearLayout>







