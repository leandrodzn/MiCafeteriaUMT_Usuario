<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_producto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="25dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#ffffff"
    app:cardUseCompatPadding="true" >

    <LinearLayout
        android:id="@+id/linearCompra"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/layoutInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp">

            <LinearLayout
                android:id="@+id/layoutDetalles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="1dp"
                android:layout_marginTop="4dp"
                android:orientation="vertical"
                android:layout_marginLeft="4dp"
                >

                <TextView
                    android:id="@+id/txtCliente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="0dp"
                    android:text="Cliente"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    />

                <LinearLayout
                    android:id="@+id/layoutTipoPago"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="4dp"
                    android:layout_toEndOf="@id/txtCliente"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/labelTipoPago"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="0dp"
                        android:text="Pago:"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/txtTipoPago"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="4dp"
                        android:text="Tipo pago"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_toEndOf="@id/labelTipoPago"
                        android:layout_toRightOf="@id/labelTipoPago"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutHoraCompra"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="4dp"
                    android:layout_toEndOf="@id/layoutTipoPago"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/labelHoraCompra"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="0dp"
                        android:text="Compra:"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/txtHoraCompra"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="4dp"
                        android:text="Hora compra"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_toEndOf="@id/labelHoraCompra"
                        android:layout_toRightOf="@id/labelHoraCompra"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutHoraRecogida"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="4dp"
                    android:layout_toEndOf="@id/layoutHoraCompra"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/labelHoraRecogida"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="0dp"
                        android:text="Recoger:"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/txtHoraRecogida"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="2dp"
                        android:text="Hora para recoger"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_toEndOf="@id/labelHoraRecogida"
                        android:layout_toRightOf="@id/labelHoraRecogida"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="4dp"
                    android:layout_toEndOf="@id/layoutHoraRecogida"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/labelTotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="0dp"
                        android:text="Total:"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/txtTotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="4dp"
                        android:text="$Total"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_toEndOf="@id/labelTotal"
                        android:layout_toRightOf="@id/labelTotal"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/tituloPedidos"
                    app:layout_constraintBottom_toBottomOf="@+id/layoutTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:text="Lista de productos:" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listRVPedidos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    />

            </LinearLayout>

            <ImageButton
                android:id="@+id/btnOcultar"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:tag=""
                android:src="@drawable/ocultar"
                android:layout_toEndOf="@id/layoutDetalles"
                android:layout_toRightOf="@id/layoutDetalles"
                android:background="@android:color/transparent"
                />

        </RelativeLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>