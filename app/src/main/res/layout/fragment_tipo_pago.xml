<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TipoPagoFragment"
    android:background="@color/cafe">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tituloTipoPago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:text="Tipo de pago" />

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textSize="19sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:text="Total en carrito: "
            app:layout_constraintTop_toBottomOf="@+id/tituloTipoPago"/>

        <Button
            android:id="@+id/btnTarjeta"
            android:layout_width="350sp"
            android:layout_height="115sp"
            android:layout_marginTop="100dp"
            android:drawableBottom="@drawable/person"
            android:text="Pagar con tarjeta de débito"
            android:textSize="20sp"
            android:textColor="@color/white"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTotal" />

        <Button
            android:id="@+id/btnCafeteria"
            android:layout_width="350sp"
            android:layout_height="115sp"
            android:layout_marginTop="20dp"
            android:drawableBottom="@drawable/person"
            android:text="Pagar en cafetería"
            android:textSize="20sp"
            android:textColor="@color/white"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnTarjeta" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>